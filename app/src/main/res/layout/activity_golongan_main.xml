<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@color/bg"
    tools:context=".GolonganMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"
            android:text="Nama Golongan"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNamaGol"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/f"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gajih Pokok"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextGapok"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/f"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunjangan Makan"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextTunMakan"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/f"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunjangan Keluarga"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextTunKeluarga"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/f"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunjangan Jabatan"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextTunJabatan"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Tambah Golongan"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/add"
            android:backgroundTint="@color/d"
            android:id="@+id/buttonAddGol"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Daftar Golongan"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/view"
            android:backgroundTint="@color/d"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:id="@+id/buttonViewGol"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Main Menu"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/mainmenu"
            android:backgroundTint="@color/d"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:id="@+id/buttonMM"/>
    </LinearLayout>


</ScrollView>