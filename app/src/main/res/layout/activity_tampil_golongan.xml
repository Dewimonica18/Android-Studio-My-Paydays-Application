<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@color/bg"
    tools:context=".tampilGolongan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswaldregular"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/f"
            android:text="ID Golongan"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:id="@+id/editTextIdGol"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Golongan"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNamaGol"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gajih Pokok"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextGapok"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunjangan Makan"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextTunMakan"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunjangan Keluarga"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextTunKeluarga"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunjangan Jabatan"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextTunJabatan"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:text="Update Golongan"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/update"
            android:backgroundTint="@color/d"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:id="@+id/buttonUpdateGol"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Hapus Golongan"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/delete"
            android:backgroundTint="@color/d"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:id="@+id/buttonDeleteGol"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Main Menu"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/mainmenu"
            android:backgroundTint="@color/d"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:id="@+id/buttonMM"
            app:layout_constraintTop_toBottomOf="@id/buttonView"/>
    </LinearLayout>



</ScrollView>