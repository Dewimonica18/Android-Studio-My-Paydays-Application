<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@color/bg"
    tools:context=".tampilPegawai">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"
            android:text="ID Pegawai"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:id="@+id/editTextId"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pegawai"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextName"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posisi"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextDesg"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/f"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextSalary"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Update Pegawai"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/update"
            android:backgroundTint="@color/d"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:id="@+id/buttonUpdate"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Hapus Pegawai"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/delete"
            android:backgroundTint="@color/d"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:id="@+id/buttonDelete"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:text="Main Menu"
            android:drawableLeft="@drawable/mainmenu"
            android:backgroundTint="@color/d"
            android:fontFamily="@font/oswaldregular"
            android:textSize="20dp"
            android:id="@+id/buttonMM"
            app:layout_constraintTop_toBottomOf="@id/buttonView"/>
    </LinearLayout>





</ScrollView>